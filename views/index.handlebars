<div class="jumbotron">
  <h1 class="display-1 text-center">Burgers!</h1>
</div>



<div class="container">
  <div class="row">
    <div class="col bg-light">

      <h2>Burgers that haven't been eaten</h2>

      <ul>

        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block ate=true}}
        {{!-- <button id="delete-btn">Delete</button> --}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col bg-dark">
      <img
        src="https://clipartion.com/wp-content/uploads/2015/11/free-hamburgers-clipart-free-clipart-graphics-images-and-photos.jpg"
        class="img-fluid" alt="Responsive image">
    </div>

    <div class="col bg-light">
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{!-- <button id="delete-btn">Delete</button> --}}
        {{#if devoured}}
        {{> burgers/burger-block ate=false}}
        {{!-- <button id="delete-btn">Delete</button> --}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="row">
  <div class="col text-center">
    <h2>Add Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>